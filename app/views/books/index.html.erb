<body>

<h1 class="index_h1">Books</h1>

<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
			<th colspan="3"></th>
		</tr>
	</thead>


	<tbody>
	 <% @books.each do |book| %>
	  <tr>
	    <td><%= book.title %></td>
	    <td><%= book.body %></td>
	    <td><%= link_to "Show", book_path(book.id) %></td>
			<td><%= link_to "Edit", edit_book_path(book.id) %></td>
			<td><%= link_to "Delete", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
	  </tr>
	 <% end %>
	</tbody>
</table>

<div class="new_book">
  <h2>New book</h2>

<div class="errors">
	<% if @book.errors.any? %>
  <div class="error_message_box">
    <div class="error_count">
    <h2 class="error_count_message"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
    </div>

    <div class="error_message">
    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
  </div>
<% end %>
</div>


  <%= form_with model: @book, url: '/books', method: :post do |f| %>

    <div class="create_box1">
    <%= f.label :title %>
    </div>
    <div class="create_box2">
    <%= f.text_field :title %>
    </div>
    <div class="create_box3">
    <%= f.label :body %>
    </div>
    <div class="create_box4">
    <%= f.text_area :body %>
    </div>
    <div>
    <%= f.submit 'Create Book' %>
    </div>

  <% end %>
</div>

</body>